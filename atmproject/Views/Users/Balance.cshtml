@model atmproject.Models.Users

@{
    ViewBag.Title = "Balance";
}

<h2>Balance</h2>



<div>
    <h2>Welcome #@Html.DisplayFor(model => model.AccountNumber) </h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Balance)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Deposit", "Deposit", new { id = Model.AccountNumber }) |
    @Html.ActionLink("Withdrawal", "Withdrawal", new { id = Model.AccountNumber }) |
