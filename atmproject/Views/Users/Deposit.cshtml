@model atmproject.Models.Users

@{
    ViewBag.Title = "Deposit";
}

<h2>Deposit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Enter amount of money you would like to deposit!</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Balance)
        </dd>

    </dl>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AccountNumber)

    <div class="form-group">
        <div hidden class="col-md-10">
            @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
        </div>
    </div>
    <form method="POST">
        <input type="text" id="moneyinput" placeholder="Enter deposit amount" name="moneyinput" />
        <input type="submit" value="Submit" />
    </form>
</div>
}

<div>
    @Html.ActionLink("Balance", "Balance", new { id = Model.AccountNumber }) |
    @Html.ActionLink("Withdrawal", "Withdrawal", new { id = Model.AccountNumber }) |
    @Html.ActionLink("Finish Transaction", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
